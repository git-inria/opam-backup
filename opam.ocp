(* Uncomment to use with TypeRex *)
(*
   ocamlc   = [ "ocp-ocamlc.opt" ]
   ocamlopt = [ "ocp-ocamlopt.opt" ]
*)
 
comp = [ "-g" ]
link = [ "-g" ]

begin library "opam-lib"
  dirname = [ "src" ]
  comp   += [ "-annot" "-warn-error" "A" ]
  files   = [
    "globals.ml"
    "utils.ml"
    "types.ml"
    "run.ml"
    "file_format.ml"
    "lexer.mll"
    "linelexer.mll"
    "parser.mly"
    "path.ml"
    "file.ml"
    "repositories.ml"
  ]

  requires = [
    "cudf"
    "dose"
    "bat"
    "unix"
    "extlib"
    "arg"
    "graph"
  ]
end

begin program "opam"
  dirname  = [ "src" ]
  comp    += [ "-annot" "-warn-error" "A" ]
  files    = [
    "solver.ml"
    "client.ml"
    "opam.ml"
  ]
  requires = [ "opam-lib" ]
end
